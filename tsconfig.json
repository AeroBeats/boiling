{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": [
      "esnext", "dom"
    ],
    "declaration": false,
    "outDir": "./dist",
    "removeComments": false,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "types": [ "node" ],
    "paths": {
      "@boiling/*": [
        "packages/*/src"
      ]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [ "node_modules" ],
  "ts-node": {
    "require": [ "tsconfig-paths/register" ]
  }
}
