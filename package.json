{
  "private": true,
  "name": "boiling",
  "version": "1.0.0",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "b": "yarn workspace @boiling/backend",
    "f": "yarn workspace @boiling/frontend",
